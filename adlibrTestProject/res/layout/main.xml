<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello" />

    <!-- adlib adview -->
    <com.mocoplex.adlib.AdlibAdViewContainer
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ads"
        isDefaultBanner="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello" />
    
    <Button 
        android:id="@+id/btn1"
        android:text="load second activity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"        
        />
    
    <Button 
        android:id="@+id/btn2"
        android:text="load third activity (dynamic)"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"        
        />
    
    <Button 
        android:id="@+id/btn3"
        android:text="load forth activity (normal activity)"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"        
        />
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Reward Link" />
    
    <Button 
        android:id="@+id/btn4"
        android:text="show reward link without icon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"        
        />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
	    
	    <Button 
	        android:id="@+id/btn5"
	        android:text="show icon"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"  
	        android:layout_weight="1"      
	        />
	    
	    <Button 
	        android:id="@+id/btn6"
	        android:text="hide icon"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        />
    </LinearLayout>
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Interstitial Ad" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
	    <Button 
	        android:id="@+id/btn7"
	        android:text="load ad1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        />
	    
	    <Button 
	        android:id="@+id/btn8"
	        android:text="load ad2"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"    
	        android:layout_weight="1"    
	        />
   </LinearLayout>
    
</LinearLayout>